{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
    "formatter":{
        "lineWidth":200,
        "indentWidth": 4,
        "indentStyle":"space"
    },
    "files": {
        "ignore": ["node_modules/", "esbuild.config.mjs", "version-bump.mjs", "main.js"],
        "ignoreUnknown": true
    },
    "javascript": {
        "formatter": {
            "quoteProperties": "asNeeded",
            "trailingComma": "none",
            "semicolons": "asNeeded",
            "arrowParentheses":"asNeeded",
            "attributePosition":"auto"
        }
    }

}
